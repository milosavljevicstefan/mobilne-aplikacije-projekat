<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/profilfoto"
android:gravity="center"
android:orientation="vertical"
android:id="@+id/activity_profil"
tools:context=".activities.ProfilActivity">


<TextView
    android:id="@+id/textView18"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Profil"
    android:textColor="@color/white"
    android:textSize="46sp"
    android:textAlignment="center"
    android:textStyle="bold"
    />


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/baseline_person_24"
            android:layout_alignParentTop="true"/>


        <Button
            android:id="@+id/changePhoto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/imageView"
            android:background="@drawable/baseline_settings_24"
            android:backgroundTint="@color/black"
            app:cornerRadius="6dp" />


        <TextView
            android:id="@+id/userRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:text="Rank:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

        <!-- TextView for dynamically inserted number -->
        <TextView
            android:id="@+id/userRankDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userRank"
            android:layout_marginTop="50dp"
            android:text="IDIET"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />


        <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border2"
                android:drawablePadding="8dp"
                android:hint="Korisnicko ime"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_below="@+id/imageView"/>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border2"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_below="@+id/editUsername"/>

        <TextView
            android:id="@+id/textViewPlayedGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEmail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:text="Broj odigranih igara:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

        <!-- TextView for dynamically inserted number -->
        <TextView
            android:id="@+id/textViewPlayedGamesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEmail"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textViewPlayedGames"
            android:text="100"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewWinLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/textViewPlayedGamesCount"
            android:text="Procenat pobeÄ‘enih i izgubljenih partija:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/winLossBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewWinLose"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"

            android:max="100"
            android:progress="70"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>


</LinearLayout>