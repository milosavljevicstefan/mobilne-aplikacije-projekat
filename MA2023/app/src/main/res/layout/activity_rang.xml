<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina11"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/fragment_profil"
    tools:context=".activities.RangActivity">


    <Button
        android:id="@+id/notifikacije"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/bell"
        android:paddingStart="10dp"
        android:text="" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="25dp"

        android:text="Rang lista"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="20dp"
        android:maxHeight="230dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="371dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/orange"
            android:text="Default"
            android:textColor="@color/white"
            android:textOff="Pogledajte nedeljni rang"
            android:textOn="Pogledajte mesecni rang"
            app:cardCornerRadius="6dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/listview3"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView

                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rang lista aktuelna za datum do:@datum"
                android:textAlignment="textStart"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
