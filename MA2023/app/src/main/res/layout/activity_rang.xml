<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina11"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/fragment_profil"
    tools:context=".activities.RangActivity">


    <Button
        android:id="@+id/button3"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-140dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/bell"
        android:paddingStart="10dp"
        android:text="" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="25dp"

        android:text="Rang lista"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="20dp"
        android:maxHeight="230dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="371dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/orange"
            android:text="Default"
            android:textColor="@color/white"
            android:textOff="Pogledajte nedeljni rang"
            android:textOn="Pogledajte mesecni rang"
            app:cardCornerRadius="6dp" />

        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"

        >

            <!-- Table Heading -->

            <TableRow
                android:background="@drawable/cell_border_black"
                android:layout_margin="1dp"
                >

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:text="Rang"

                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Korisnik"
                    android:textColor="@android:color/black"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tokeni"
                    android:textColor="@android:color/black"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    />


            </TableRow>

            <!-- Table Data -->

        <TableRow
            android:background="@drawable/cell_border_black"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="1"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="aaa"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />


        </TableRow>

        <TableRow
            android:background="@drawable/cell_border_black"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="2"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="bbb"
                android:textColor="@android:color/black"
                android:padding="15sp"
                android:textSize="14sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />


        </TableRow>

        <TableRow
            android:background="@drawable/cell_border_black"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="3"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CCc"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />


        </TableRow>


        <TableRow
            android:background="@drawable/cell_border_black"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:text="3"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CCc"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />


        </TableRow>


        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView

                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rang lista aktuelna za datum do:@datum"
                    android:textAlignment="textStart"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Additional views can be added here -->

        </LinearLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
